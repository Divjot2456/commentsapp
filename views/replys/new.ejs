<%- include('../partials/header') %>

<div class="container">
    <h1 class="text-center">Reply to <%= comment4.name %>'s Comment</h1>
    
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/comments/<%=comment4._id%>/replys" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="reply[author]" placeholder="author">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="reply[info]" placeholder="reply">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/comments">Go Back</a>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>